<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/cardlist_item"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    app:ignore="NamespaceTypo">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/backdrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:alpha="0.6"
            android:background="@drawable/bali"
            android:scaleType="centerCrop"
            app:layout_collapseMode="parallax" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_kotak"
            android:alpha="0.4"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wisata Dunia"
                android:id="@+id/sloganAtas"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/namaDestinasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pulau Bali"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="30dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="20dp"
                    android:id="@+id/imgTime"
                    android:src="@drawable/timer"/>

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/durasi"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/imgTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Durasi : 10 Hari"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />

            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>

