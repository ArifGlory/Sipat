<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:id="@+id/relaTitle"
            android:background="@color/colorPrimary">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Harga"
                android:id="@+id/txtHarga"
                android:textColor="@color/white_greyish"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:background="@color/white_greyish"
                android:text="Jenis Paket"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/txtHarga"
                android:id="@+id/txtJenisPaket"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txtJenisPaket"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:text="No Rek. Perusahaan : 202828283 "
                android:id="@+id/txtNoRek"
                android:textColor="@color/white_greyish"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/txtNoRek"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="5dp"
                android:text="Mandiri"
                android:id="@+id/txtBank"
                android:textColor="@color/white_greyish"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:text="Tanggal"
                android:id="@+id/txtTanggal"
                android:textColor="@color/white_greyish"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:layout_below="@+id/txtTanggal"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:text="Status"
                android:id="@+id/txtStatus"
                android:textColor="@color/white_greyish"
                android:textSize="16sp"
                android:textStyle="normal" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relaTitle"
            android:layout_marginTop="5dp"
            android:id="@+id/relaPaket">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgFoto"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:paddingTop="16dp"
                android:src="@drawable/bali" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="nama Paket"
                android:id="@+id/txtNamaPaket"
                android:textColor="@color/album_title"
                android:layout_toRightOf="@+id/imgFoto"
                android:layout_centerVertical="true"
                android:textSize="23sp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold" />


            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_below="@+id/imgFoto"
                android:layout_marginTop="5dp"
                android:background="@color/album_title" />



        </RelativeLayout>


        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/startblue"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:id="@+id/imgBuktiBayar"
            android:src="@drawable/belum_upload"
            android:layout_below="@+id/relaPaket"
            android:padding="10dp"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Bukti Bayar"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/btnUpload"
        android:background="#3498db"
        android:textColor="@color/white_greyish"
        android:layout_alignParentBottom="true" />


    </RelativeLayout>
